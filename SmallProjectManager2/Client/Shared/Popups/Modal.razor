<div class="border shadow-lg p-4 mx-auto max-w-2xl ">
    <h2 class="text-lg">@Title</h2>
    <div class="h-px bg-gray-400 my-4"></div>
    <div>@Message</div>
    <div class="mt-4">
        <button onclick="@Close" class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200">
            Close
        </button>
    </div>
</div>

@code {

    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Message { get; set; }

    private async Task Close() => await BlazoredModal.CloseAsync();
}